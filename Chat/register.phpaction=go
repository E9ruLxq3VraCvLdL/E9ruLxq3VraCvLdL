function check()
{
var email=document.form1.email.value, pw1=document.form1.passwort.value, pw2=document.form1.passwort2.value, alter=document.form1.alter.value, name=document.form1.name.value, hp=document.form1.hp.value;
var cemail="",cpw="",calter="",cname="",chp="";

if (email!="")
{
if (document.form1.email.value.indexOf('@',0)==-1 || document.form1.email.value.indexOf('.',0)==-1)
var cemail="Die eingegebene E-Mail Adresse ist nicht korrekt!\n";
}
else{
var cemail="Bitte E-Mail Adresse angeben!\n";}

if (pw1!="" || pw2!="")
{ if (pw1!=pw2)
var cpw="Bitte Passwortangaben überprüfen!\n";
}
else{
var cpw="Bitte Passwort eingeben!\n";}
if (name=="")
var cname="Bitte Namen angeben!\n";
if (hp!="")
{ if (document.form1.hp.value.indexOf('http://',0)==-1 || document.form1.hp.value.indexOf('www.',0)==-1)
var chp="Bitte Websiteurl korrigieren: http:\/\/www. davor setzen!\n";
}
if (alter=="")
var calter="Bitte Alter angeben!\n";
if (cemail!="" || cpw!="" || cname!="" || chp!="" || calter!="")
{
alert(cemail+cpw+cname+chp+calter)
return false;
}
else
return true;
}
</script>

